[
  {
    "route" : "^/(index\\.html?)?$",
    "path" : "./index.html",
    "comment" : "Rule for serving the index file"
  },
  {
    "route" : "^/httpbin/.*",
    "path" : "./httpbin.py",
    "comment" : "Rule for serving httpbin"
  },
  {
    "route" : "^/.well-known/(?:.*/)*([^/]+)$",
    "path" : "./\\1",
    "headers" : {
      "content-type" : "text/plain"
    },
    "comment" : "Rule for Letsencrypt acme updates"
  },
  {
    "route" : "^/example/.*",
    "forward" : "https://www.example.com",
    "recreate_url" : false,
    "replace" : [
      {
        "pattern" : "[Ee]xample",
        "replacement" : "Whoot"
      }
    ],
    "comment" : "Rule to forward to example.com"
  },
  {
    "route" : "/files/(.*)",
    "path" : "./\\1",
    "comment" : "Rule for serving files under /files"
  },
  {
    "route" : ".*",
    "code" : 302,
    "headers" : {
      "location" : "/"
    },
    "comment" : "Catch-all rule to redirect anything that is not a /files/ request to root"
  }
]
